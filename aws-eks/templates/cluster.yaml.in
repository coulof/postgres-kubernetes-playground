apiVersion: eksctl.io/v1alpha5
kind: ClusterConfig
metadata:
  name: @@CLUSTER_PREFIX@@-@@CLUSTER_PRIMARY_REGION@@
  region: @@CLUSTER_PRIMARY_REGION@@
  version: "@@K8S_VERSION@@"

iam:
  withOIDC: true
  vpcResourceControllerPolicy: true
  serviceAccounts:
  - metadata:
      name: ebs-csi-controller-sa
      namespace: kube-system
    wellKnownPolicies:
      ebsCSIController: true
  - metadata:
      name: @@CLUSTER_PREFIX@@-@@CLUSTER_PRIMARY_REGION@@
      namespace: default
      labels: {aws-usage: "cloudnative-pg"}
    attachPolicy:
      Version: "2012-10-17"
      Statement:
      - Effect: Allow
        Action:
        - "s3:AbortMultipartUpload"
        - "s3:DeleteObject"
        - "s3:GetObject"
        - "s3:ListBucket"
        - "s3:PutObject"
        - "s3:PutObjectTagging"
        Resource:
        - "arn:aws:s3:::@@CLUSTER_PREFIX@@-@@CLUSTER_PRIMARY_REGION@@"
        - "arn:aws:s3:::@@CLUSTER_PREFIX@@-@@CLUSTER_PRIMARY_REGION@@/*"
      - Effect: Allow
        Action:
        - "s3:GetObject"
        - "s3:ListBucket"
        Resource:
        - "arn:aws:s3:::@@CLUSTER_PREFIX@@-@@CLUSTER_SECONDARY_REGION@@"
        - "arn:aws:s3:::@@CLUSTER_PREFIX@@-@@CLUSTER_SECONDARY_REGION@@/*"

managedNodeGroups:
  - name: az1
    instanceType: r5.large
    availabilityZones: ["@@CLUSTER_PRIMARY_REGION@@a"]
    labels:
      workload: postgres
    desiredCapacity: 1
    iam:
      withAddonPolicies:
        ebs: true
  - name: az2
    instanceType: r5.large
    availabilityZones: ["@@CLUSTER_PRIMARY_REGION@@b"]
    labels:
      workload: postgres
    desiredCapacity: 1
    iam:
      withAddonPolicies:
        ebs: true
  - name: az3
    instanceType: r5.large
    availabilityZones: ["@@CLUSTER_PRIMARY_REGION@@c"]
    labels:
      workload: postgres
    desiredCapacity: 1
    iam:
      withAddonPolicies:
        ebs: true
  - name: pgbench-az-1
    instanceType: m5.large
    availabilityZones: ["@@CLUSTER_PRIMARY_REGION@@a"]
    labels:
      workload: pgbench
    desiredCapacity: 1
    iam:
      withAddonPolicies:
        ebs: true
  - name: monitor-az1
    instanceType: m5.large
    availabilityZones: ["@@CLUSTER_PRIMARY_REGION@@a"]
    labels:
      workload: monitor
    desiredCapacity: 1
    iam:
      withAddonPolicies:
        ebs: true

addons:
- name: vpc-cni
  version: latest
  attachPolicyARNs:
    - arn:aws:iam::aws:policy/AmazonEKS_CNI_Policy
- name: coredns
  version: latest
- name: kube-proxy
  version: latest
- name: aws-ebs-csi-driver
  version: latest
